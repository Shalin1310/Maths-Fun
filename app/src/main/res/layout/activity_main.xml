<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shalin.basicmathsexcerciseforchilderns.MainActivity">

    <Button
        android:id="@+id/startButton"
        android:onClick="start"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:backgroundTint="#ff0eff31"
        android:padding="40dp"
        android:textSize="80sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Go!"/>
    <RelativeLayout
        android:id="@+id/gameRelativeLayout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="invisible">
        <TextView
            android:id="@+id/timerTextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textSize="30sp"
            android:text="30s"
            android:background="#fffffb2e"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/pointsTextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textSize="30sp"
            android:text="0/0"
            android:background="#ffff8807"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/sumTextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="15dp"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:text="31 + 12"
            android:layout_alignParentTop="true"
            android:textColor="#ff141414"/>
        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/sumTextView">
            <Button
                android:id="@+id/button0"
                android:onClick="chooseAnswer"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="80sp"
                android:text="3"
                android:background="#ff444eff"
                android:tag="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="0"/>
            <Button
                android:id="@+id/button1"
                android:onClick="chooseAnswer"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="80sp"
                android:text="3"
                android:background="#ff11ff46"
                android:tag="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="1"/>
            <Button
                android:id="@+id/button2"
                android:onClick="chooseAnswer"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="80sp"
                android:text="3"
                android:background="#ffff09e4"
                android:tag="2"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="0"/>
            <Button
                android:id="@+id/button3"
                android:onClick="chooseAnswer"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="80sp"
                android:text="3"
                android:background="#ff0bfffd"
                android:tag="3"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="1"/>
        </GridLayout>
        <TextView
            android:id="@+id/resultTextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="40sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/gridLayout"/>
        <Button
            android:id="@+id/playAgainButton"
            android:onClick="playAgain"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:text="Play Again"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/resultTextView"
            android:layout_alignStart="@+id/sumTextView"/>
    </RelativeLayout>

</RelativeLayout>
